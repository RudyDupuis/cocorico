{
    "name": "Cocorico",
    "dockerFile": "./Dockerfile",
    "context": "..",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "esbenp.prettier-vscode",
                "ms-python.black-formatter"
            ]
        }
    },
    "remoteUser": "root"
}